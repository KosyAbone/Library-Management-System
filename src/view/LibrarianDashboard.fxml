<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: #F2F2F2;" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.LibrarianDashboardController" stylesheets="@../assets/styles.css">
   
   <children>
      <Label layoutX="35.0" layoutY="40.0" text="Librarian Dashboard" style="-fx-font-weight: bold; -fx-font-size: 25;">
         <font>
            <Font name="System Bold" size="50.0" />
         </font>
      </Label>
      <!-- Main Content Container -->
      <VBox layoutX="300.0" layoutY="150.0" spacing="65.0">
         <!-- Book Management Card -->
         <Pane prefHeight="150.0" prefWidth="900.0" 
               style="-fx-background-color: white; -fx-background-radius: 12;">
            <children>
               <Pane layoutX="20.0" layoutY="25.0" prefHeight="100.0" prefWidth="100.0" 
                     style="-fx-background-color: #D7D7D7; -fx-background-radius: 12;">
                  <children>
                     <ImageView fitHeight="91.0" fitWidth="91.0" layoutX="22.0" layoutY="22.0" 
                                pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../assets/bookIcon.png" />
                        </image>
                     </ImageView>
                  </children>
               </Pane>
               <Label layoutX="180.0" layoutY="50.0" text="Book Management" 
                      textAlignment="CENTER" style="-fx-font-size: 30; -fx-font-weight: bold;"/>
               <Button onAction="#handleBookManagement" prefHeight="150.0" prefWidth="900.0" 
                      style="-fx-background-color: transparent; -fx-background-radius: 12;" 
                      text=" "/>
            </children>
         </Pane>
         
         <!-- Member Management Card -->
         <Pane prefHeight="150.0" prefWidth="900.0" 
               style="-fx-background-color: white; -fx-background-radius: 12;">
            <children>
               <Pane layoutX="20.0" layoutY="25.0" prefHeight="100.0" prefWidth="100.0" 
                     style="-fx-background-color: #D7D7D7; -fx-background-radius: 12;">
                  <children>
                     <ImageView fitHeight="91.0" fitWidth="91.0" layoutX="22.0" layoutY="22.0" 
                                pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../assets/memberIcon.png" />
                        </image>
                     </ImageView>
                  </children>
               </Pane>
               <Label layoutX="180.0" layoutY="50.0" text="Member Management" 
                      textAlignment="CENTER" style="-fx-font-size: 30; -fx-font-weight: bold;"/>
               <Button onAction="#handleMemberManagement" prefHeight="150.0" prefWidth="900.0" 
                      style="-fx-background-color: transparent; -fx-background-radius: 12;" 
                      text=" "/>
            </children>
         </Pane>
         
         <!-- Overdue Books and Fines Card -->
         <Pane prefHeight="150.0" prefWidth="900.0" 
               style="-fx-background-color: white; -fx-background-radius: 12;">
            <children>
               <Pane layoutX="20.0" layoutY="25.0" prefHeight="100.0" prefWidth="100.0" 
                     style="-fx-background-color: #D7D7D7; -fx-background-radius: 12;">
                  <children>
                     <ImageView fitHeight="91.0" fitWidth="91.0" layoutX="22.0" layoutY="22.0" 
                                pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../assets/overdueIcon.png" />
                        </image>
                     </ImageView>
                  </children>
               </Pane>
               <Label layoutX="180.0" layoutY="50.0" text="Overdue Books And Fines" 
                      textAlignment="CENTER" style="-fx-font-size: 30; -fx-font-weight: bold;"/>
               <Button onAction="#handleOverdueBooks" prefHeight="150.0" prefWidth="900.0" 
                      style="-fx-background-color: transparent; -fx-background-radius: 12;" 
                      text=" "/>
            </children>
         </Pane>
      </VBox>
      
      <!-- Logout Button - Now more visible -->
      <Pane layoutX="1500.0" layoutY="800.0" prefHeight="60.0" prefWidth="60.0" 
            style="-fx-background-color: white; -fx-background-radius: 30;">
         <children>
            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="15.0" layoutY="15.0" 
                       pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/logOutIconBlack.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Button layoutX="1500.0" layoutY="800.0" onAction="#handleLogout" 
              prefHeight="60.0" prefWidth="60.0" 
              style="-fx-background-color: transparent; -fx-background-radius: 30;" 
              text=" "/>
   </children>
</Pane>