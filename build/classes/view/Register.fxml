<AnchorPane prefHeight="575.0" prefWidth="930.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <children>
        <Button layoutX="-48.0" layoutY="2.0" text=" " />
        <Pane layoutX="-0.39999999999997726" prefHeight="575.0" prefWidth="469.0" style="-fx-background-color: black; -fx-background-radius: 0 40 40 0;">
            <children>
                <Label layoutX="139.0" layoutY="360.0" text="Already have Account? Sign In now." textFill="WHITE" />
                <Pane fx:id="signInPane" layoutX="144.0" layoutY="408.0" prefHeight="42.0" prefWidth="185.0" style="-fx-background-color: black; -fx-background-radius: 15px; -fx-border-color: white; -fx-border-radius: 15px;">
                    <children>
                        <Label fx:id="lblSignIn" layoutX="68.0" layoutY="13.0" text="SIGN IN" textFill="WHITE" />
                    </children>
                </Pane>
                <Button blendMode="OVERLAY" layoutX="144.0" layoutY="408.0" onAction="#btnSignInOnAction" prefHeight="42.0" prefWidth="185.0" style="-fx-background-radius: 15px;" text=" " />
                <Label layoutX="123.0" layoutY="249.0" prefHeight="58.0" prefWidth="208.0" text="Library Management System" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <ImageView fitHeight="60.8" fitWidth="72.6" layoutX="740.0" layoutY="69.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/bookWormBadge.png" />
            </image>
        </ImageView>

        <Label layoutX="655.0" layoutY="76.0" text="Sign Up">
            <font>
                <Font size="30.0" />
            </font>
        </Label>

        <Label layoutX="596.0" layoutY="162.0" text="Please provide your information to sign up.">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- User Inputs -->
        <TextField fx:id="txtFirstName" layoutX="502.0" layoutY="218.0" prefHeight="42.0" prefWidth="195.0" promptText="  First name" style="-fx-border-color: #727374; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" />
        <TextField fx:id="txtLastName" layoutX="713.0" layoutY="218.0" prefHeight="42.0" prefWidth="195.0" promptText="  Last name" style="-fx-border-color: #727374; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" />
        <TextField fx:id="txtContactNo" layoutX="502.0" layoutY="284.0" prefHeight="42.0" prefWidth="170.0" promptText="  Contact No" style="-fx-border-color: #727374; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" />
        <TextField fx:id="txtEmail" layoutX="688.0" layoutY="284.0" prefHeight="42.0" prefWidth="220.0" promptText="  Email" style="-fx-border-color: #727374; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" />
        <TextField fx:id="txtUsername" layoutX="502.0" layoutY="350.0" prefHeight="42.0" prefWidth="195.0" promptText="  Username" style="-fx-border-color: #727374; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" />
        <PasswordField fx:id="txtPassword" layoutX="713.0" layoutY="350.0" prefHeight="42.0" prefWidth="195.0" promptText="  Password" style="-fx-border-color: #727374; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" />

        <!-- ComboBox for Member Type -->
        <ComboBox fx:id="comboMemberType" layoutX="502.0" layoutY="406.0" prefHeight="42.0" prefWidth="406.0" promptText="Select Member Type" style="-fx-background-radius: 12; -fx-border-radius: 12;" />
        <Label fx:id="lblMemberTypeAlert" layoutX="515.0" layoutY="449.0" textFill="RED">
            <font>
                <Font size="11.0" />
            </font>
        </Label>

        <!-- Sign Up Button -->
        <Pane fx:id="signUpPane" layoutX="574.0" layoutY="475.0" prefHeight="42.0" prefWidth="267.0" style="-fx-background-color: black; -fx-background-radius: 15px;">
            <children>
                <Label fx:id="lblSignUp" layoutX="107.0" layoutY="13.0" text="SIGN UP" textFill="WHITE" />
            </children>
        </Pane>

        <Button blendMode="OVERLAY" layoutX="574.0" layoutY="475.0" onAction="#btnSignUpOnAction" prefHeight="42.0" prefWidth="267.0" style="-fx-background-radius: 15px;" text=" " />

        <!-- Validation Alerts -->
        <Label fx:id="lblFirstNameAlert" layoutX="515.0" layoutY="261.0" textFill="RED">
            <font><Font size="11.0" /></font>
        </Label>
        <Label fx:id="lblLastNameAlert" layoutX="726.0" layoutY="261.0" textFill="RED">
            <font><Font size="11.0" /></font>
        </Label>
        <Label fx:id="lblContactNoAlert" layoutX="515.0" layoutY="327.0" textFill="RED">
            <font><Font size="11.0" /></font>
        </Label>
        <Label fx:id="lblEmailAlert" layoutX="703.0" layoutY="326.0" textFill="RED">
            <font><Font size="11.0" /></font>
        </Label>
        <Label fx:id="lblUsernameAlert" layoutX="515.0" layoutY="393.0" textFill="RED">
            <font><Font size="11.0" /></font>
        </Label>
        <Label fx:id="lblPasswordAlert" layoutX="728.0" layoutY="393.0" textFill="RED">
            <font><Font size="11.0" /></font>
        </Label>
    </children>
</AnchorPane>
